<div class="w-full">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold"><%= @course.name %></h1>
    <div class="space-x-2">
      <%= link_to "Edit", edit_course_path(@course), class: "bg-yellow-500 hover:bg-yellow-700 text-white font-bold py-2 px-4 rounded" %>
      <%= link_to "Back to Courses", courses_path, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  </div>

  <div class="bg-white shadow-md rounded-lg p-6 mb-6">
    <div class="mb-4">
      <h2 class="text-xl font-semibold mb-2">Description</h2>
      <% if @course.description.present? %>
        <p class="text-gray-700"><%= @course.description %></p>
      <% else %>
        <p class="text-gray-400 italic">No description provided</p>
      <% end %>
    </div>
  </div>

  <% if @course.subjects.any? %>
    <div class="bg-white shadow-md rounded-lg p-6">
      <div class="flex justify-between items-center mb-4">
        <h2 class="text-2xl font-bold">Subjects (<%= @course.subjects.count %>)</h2>
      </div>

      <div class="overflow-x-auto">
        <table class="min-w-full">
          <thead class="bg-gray-100">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Code</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Prerequisites</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Semesters</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">CP</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @course.subjects.order(:code).each do |subject| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="font-mono font-bold text-blue-600"><%= subject.code %></span>
                </td>
                <td class="px-6 py-4">
                  <div class="text-sm font-medium text-gray-900"><%= subject.name %></div>
                  <% if subject.description.present? %>
                    <div class="text-sm text-gray-500"><%= subject.description.truncate(100) %></div>
                  <% end %>
                </td>
                <td class="px-6 py-4">
                  <% if subject.prerequisites.present? %>
                    <div class="flex flex-wrap gap-1">
                      <% subject.prerequisite_codes.each do |prereq| %>
                        <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-yellow-100 text-yellow-800 font-mono">
                          <%= prereq %>
                        </span>
                      <% end %>
                    </div>
                  <% else %>
                    <span class="text-gray-400 text-sm">None</span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm">
                  <% if subject.semester_availability.present? %>
                    <span class="text-gray-700"><%= subject.semester_availability %></span>
                  <% else %>
                    <span class="text-gray-400">N/A</span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= subject.credit_points || 'N/A' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <% else %>
    <div class="bg-gray-100 border border-gray-300 rounded-lg p-8 text-center">
      <p class="text-gray-600 text-lg mb-4">No subjects yet.</p>
      <p class="text-gray-500">Add subjects manually through the database seed or import.</p>
    </div>
  <% end %>
</div>
